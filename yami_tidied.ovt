@OBSThemeMeta {
  name: 'Tidied';
  id: 'com.obsproject.Yami.Tidied';
  extends: 'com.obsproject.Yami';
  author: 'jimpalompa';
  dark: 'true';
}

/* -----------------------------------------------------------------------------
  Hide elements
----------------------------------------------------------------------------- */
#controlsDock #virtualCamLayout,
#controlsDock #virtualCamButton,
#controlsDock #virtualCamConfigButton,
#controlsDock #exitButton,
#centralwidget .QWidget QPushButton,
#centralwidget .QWidget .slider-tbar {
  min-width: 0;
  max-width: 0;
  min-height: 0;
  max-height: 0;
  width: 0;
  height: 0;
  margin: 0;
  padding: 0;
  color: transparent;
  background: transparent;
  border: none;
  outline: none;
  qproperty-icon: none;
}

/* -----------------------------------------------------------------------------
  Studio Mode transition panel
----------------------------------------------------------------------------- */

/* Work in progress */
#centralwidget>.QWidget QLabel {}

/* -----------------------------------------------------------------------------
  Preview/Program labels
----------------------------------------------------------------------------- */

.label-preview-title {
  font-size: 16pt;
  margin-bottom: 2px;
}

/* -----------------------------------------------------------------------------
  The end
----------------------------------------------------------------------------- */
